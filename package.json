{
  "name": "sqrl-design-system",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bloomer": "^0.6.5",
    "bulma": "^0.7.5"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:lib": "npm run build:lib-js && npm run build:lib-css",
    "build:lib-js": "rm -rf dist && NODE_ENV=production babel src/lib --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__,*.scss",
    "build:lib-css": "node-sass --include-path ./src/lib --include-path ./node_modules ./src/lib/theme.scss ./dist/theme.css",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "prettier './src/**/*.js' --write"
  },
  "prettier": {
    "useTabs": false,
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "jsxBracketSameLine": false,
    "semi": false,
    "arrowParens": "avoid",
    "bracketSpacing": true
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  }
}
